{
  "name": "mongo-sink",
  "config": {
    "connector.class": "com.mongodb.kafka.connect.MongoSinkConnector",
    "topics": "test.users",
    "connection.uri": "mongodb+srv://${file:/tweet-app/utils/secrets/secrets.properties:user}:${file:/tweet-app/utils/secrets/secrets.properties:password}@tweet-app.cteyhxm.mongodb.net/test?retryWrites=true&w=majority",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "key.converter": "org.apache.kafka.connect.json.JsonConverter",
    "database": "test",
    "collection": "users",
    "tasks.max":1,
    "max.num.retries":1,
    "retries.defer.timeout":5000,
    "value.converter.schema.registry.url": "http://schema-registry:8081",
    "key.converter.schema.registry.url": "http://schema-registry:8081",
    "errors.log.enable": true,
    "errors.log.include.messages": true,
    "mongo.errors.log.enable": true,
    "mongo.errors.log.include.messages": true,
    "key.converter.schemas.enable": false,
    "value.converter.schemas.enable": false,
    "document.id.strategy": "com.mongodb.kafka.connect.sink.processor.id.strategy.BsonOidStrategy",
    "transforms": "InsertUpdatedAt, TimestampConverter",
    "transforms.InsertUpdatedAt.type": "org.apache.kafka.connect.transforms.InsertField$Value",
    "transforms.InsertUpdatedAt.static.field": "updatedAt",
    "transforms.InsertUpdatedAt.static.value": "${timestamp}",
    "transforms.TimestampConverter.type": "org.apache.kafka.connect.transforms.TimestampConverter$Value",
    "transforms.TimestampConverter.format": "yyyy-MM-dd'T'HH:mm:ss.SSS'Z'",
    "transforms.TimestampConverter.field": "createdAt, updatedAt",
    "transforms.TimestampConverter.target.type": "Timestamp",
    "writemodel.strategy":"com.mongodb.kafka.connect.sink.writemodel.strategy.UpdateOneTimestampsStrategy",
    "change.data.capture.handler":"com.mongodb.kafka.connect.sink.cdc.debezium.mongodb.MongoDbHandler"
  }
}